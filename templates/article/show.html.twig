{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<style>
    body {
        background-color: #dcdcdc; /* Fond gris clair */
    }
    .product-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }
    .product-card {
        display: flex;
        align-items: center;
        background: #e6e6e6;
        padding: 30px;
        border-radius: 10px;
        width: 900px;
        box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.1);
    }
    .product-image {
        width: 300px;
        height: 300px;
        border: 2px solid #007bff;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        color: #aaa;
        font-size: 18px;
        margin-right: 40px;
    }
    .product-details {
        flex-grow: 1;
    }
    .product-logo {
        display: block;
        margin-left: auto;
        margin-right: 0;
        width: 120px;
    }
    .product-title {
        margin-top: 10px;
        font-size: 18px;
    }
    .product-info {
        margin-top: 10px;
        font-size: 16px;
    }
    .product-info hr {
        border-top: 1px solid black;
    }
    .btn-add-cart {
        background-color: red;
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 30px;
        font-size: 16px;
        margin-top: 20px;
        cursor: pointer;
    }
    .btn-add-cart:hover {
        background-color: darkred;
    }
</style>

<div class="product-container">
    <div class="product-card">
        <!-- Image du produit -->
        <div class="product-image">
            Image
        </div>

        <!-- Détails du produit -->
        <div class="product-details">
            <img src={{asset('images/all4sport.png')}} alt="Logo All4Sport" class="product-logo">
            <h3 class="product-title">Détail du produit :</h3>
            <div class="product-info">
                <p><strong>Nom :</strong> {{ article.nom }}</p>
                <p><strong>Disponible :</strong> {{ article.disponibilite ? 'Oui' : 'Non' }}</p>
                <hr>
                <p><strong>Prix :</strong> <span id="prix">---</span></p>
            </div>

            <!-- Bouton Ajouter au panier -->
            <button class="btn-add-cart">Ajouter au panier</button>
        </div>
    </div>
</div>

{% endblock %}
