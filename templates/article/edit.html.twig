{% extends 'base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block body %}
    <h1>Modifier l'article</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.disponibilite) }}
        {{ form_row(form.prix) }}
        {{ form_row(form.image) }}
        {{ form_row(form.quantite) }}
        <button type="submit">Enregistrer</button>
    {{ form_end(form) }}

    <h2>Stock actuel</h2>
    <p>Quantité en stock : {{ quantite }}</p>

    <a href="{{ path('app_article_index') }}">Retour à la liste</a>
{% endblock %}
