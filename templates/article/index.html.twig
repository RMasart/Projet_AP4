{% extends 'base.html.twig' %}

{% block title %}
	All4Sport - Accueil
{% endblock %}

{% block body %}
	<div>
		<div class="d-flex justify-content-around align-items-center mt-3">
			<div>
				<nav class="navbar">
					<div class="container-fluid">
						<form class="d-flex" role="search">
							<input class="form-control me-2 search-input" type="search" placeholder="Recherche" aria-label="Search">
						</form>
					</div>
				</nav>
			</div>
			<div class="btn-group" role="group">
				<input type="checkbox" class="btn-check" id="option1" checked autocomplete="off">
				<label class="btn btn-secondary" for="option1">
					<i class="fa-solid fa-check check-icon"></i>
					Nouveauté
				</label>

				<input type="radio" class="btn-check" id="option2" name="options" autocomplete="off">
				<label class="btn btn-secondary" for="option2">
					<i class="fa-solid fa-check check-icon"></i>
					Prix Croissant
				</label>
				<input type="radio" class="btn-check" id="option3" name="options" autocomplete="off">
				<label class="btn btn-secondary" for="option3">
					<i class="fa-solid fa-check check-icon"></i>
					Prix décroissant
				</label>
			</div>
		</div>
		<div>
			{% for article in articles %}

				{% else %}
					<p class="text-center">Aucun Article existant</p>
			{% endfor %}
		</div>
	</div>
{% endblock %}
